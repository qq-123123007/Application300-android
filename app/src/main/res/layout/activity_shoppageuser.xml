<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".shoppage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:text="text"
        android:gravity="center"
        android:background="#8000ff"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:textSize="40dp"
        android:id="@+id/showname"></TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/newview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:id="@+id/showimg"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/title1"
                android:text="ID"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="text"
                android:textSize="30dp"
                android:id="@+id/showid"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#eeeeee"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/title3"
                android:text="Address"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="text"
                android:drawableRight="@drawable/map"
                android:textSize="30dp"
                android:id="@+id/showaddress"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#eeeeee"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/title4"
                android:text="Introduction"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textSize="20dp"
                android:text="text"
                android:id="@+id/introduction"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text"></TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attention"
                android:background="#00ff00"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:text="Following"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </ScrollView>
</LinearLayout>